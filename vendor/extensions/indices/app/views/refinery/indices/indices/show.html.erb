<% content_for :body_content_title do %>
  <%= @index.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @index.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @index.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %> 
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="indices">
      <% @indices.each do |index| %>
        <li>
          <%= link_to index.title, refinery.indices_index_path(index) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
