<ul>
  <% if ::Refinery::Indices::Admin::IndicesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.indices_admin_indices_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_indices_admin_index_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Indices::Admin::IndicesController.sortable? && ::Refinery::Indices::Index.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Indices"),
                 refinery.indices_admin_indices_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Indices"),
                 refinery.indices_admin_indices_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
